{% include 'partials/header.twig' %}

<div class="container">
    <div class="py-5 text-center">
    <h2>Xml to Xlsx Converter</h2>
    </div>

    <div class="row">
        <div class="col-md-12 order-md-1">
            {% if msg != '' %}<div class="alert alert-success" role="alert">{{ msg }}</div>{% endif %}
            <form id="upload_form" enctype="multipart/form-data" method="post">
                <label class="my-3" for="file1">Select xml file to convert</label>
                <input class="form-control" type="file" name="file1" id="file1" onchange="uploadFile()"><br>
                <progress id="progressBar" value="0" max="100" class="w-100"></progress>
                <p id="loaded_n_total"></p>
                <h5 class="mt-3" id="status"></h5>
            </form>
        </div>
    </div>

    <footer class="my-5 pt-5 text-muted text-center text-small">
    <p class="mb-1">&copy; 2020-2022</p>
    <ul class="list-inline">
        <li class="list-inline-item"><a href="#">Privacy</a></li>
        <li class="list-inline-item"><a href="#">Terms</a></li>
        <li class="list-inline-item"><a href="#">Support</a></li>
    </ul>
    </footer>
</div>
